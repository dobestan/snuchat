<section id="box-sign">
  <div class="container">
      <div class="row">
          <div class="box">
              <div class="head">
                  <h6>Log in to your account</h6>
              </div>

              <div class="form">
                <%= form_for :session, url: sessions_path do |f| %>
                    <div class="form-group clearfix">
                      <div class="col-lg-12">
                        <%= f.text_field :mysnu, class: "form-control", placeholder: "마이스누 아이디" %>
                      </div>
                    </div>
                    <div class="form-group clearfix">
                      <div class="col-lg-12">
                        <%= f.password_field :password, class: "form-control", placeholder: "비밀번호" %>
                      </div>
                    </div>
                    <div class="remember">
                        <div class="checkbox">
                          <label>
                            <input type="checkbox"> Remember me
                          </label>
                        </div>

                        <a class="forgot" href="<%= forgot_password_url  %>">비밀번호 찾기</a>
                    </div>
                    <div class="form-group clearfix">
                      <div class="col-lg-12">
                        <%= f.submit "로그인", class: "btn btn-gray"  %>
                      </div>
                    </div>
                  <% end %>
              </div>
          </div>
          <p class="already">아직 스누챗 계정이 없으시다구요?<a href="<%= signup_url  %>">회원가입</a></p>
      </div>
  </div>
</section>
